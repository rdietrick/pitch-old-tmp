<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
       "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
  <field name="emailTemplate.templateName">
      <field-validator type="requiredstring">
      	<param name="trim">true</param>
		<message>You must enter a message name.</message>
      </field-validator>
  </field>
  <field name="emailTemplate.subject">
      <field-validator type="requiredstring">
      	<param name="trim">true</param>
		<message>You must enter a message subject.</message>
      </field-validator>
  </field>
  <field name="emailTemplate.fromAddress">
      <field-validator type="requiredstring">
      	<param name="trim">true</param>
		<message>You must enter a 'from' address.</message>
      </field-validator>
  </field>
</validators>

